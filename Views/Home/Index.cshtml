<section>
    
    <h1>Directive: datepicker test</h1>
    
    <datepicker>
        <div class="datepicker">
            <p>{{month.year}} {{month.monthName}}</p>
            
            <ul class="head">
                <li>
                    #
                </li>
                <li ng-repeat="name in month.weekDayNames">
                    {{name}}
                </li>
            </ul>
                
            <ul class="body" ng-repeat="week in month.weeks">
                <li>
                    {{week.number}}
                </li>
                <li ng-repeat="day in week.days" class="active-{{day.isActive}} range-{{day.isRange}}">
                    {{day.monthDay}}
                </li>
            </ul>

        </div>
    </datepicker>
    
</section>

<section>
<h1>Directive: timer test</h1>
    
    <timer duration="'10s'" autoreset="1==1">
        <div class="timer started-{{isStarted}}">
            <div class="progress" style="width:{{progress}}%;"></div>
        </div>
        
        {{countdown}} of {{duration}} -> {{hours}}:{{minutes}}:{{seconds}}:{{millis}}

        <button ng-click="start()">start</button> |
        <button ng-click="pause()">pause</button> |
        <button ng-click="resume()">resume</button> |
        <button ng-click="reset()">reset</button>
    </timer>
    
    
    <timer interval="1000" duration="'10m'" autoreset="1==1">
        <div style="" class="timer started-{{isStarted}}">
            <div class="progress" style="width: {{progress}}%;"></div>
        </div>
        
        {{countdown}} of {{duration}} ->
        
        {{!isRunning}} {{isPaused}}

        <a href="" class="show-{{!isRunning}}" ng-click="start()">start</a> |
        <a href="" class="show-{{isRunning}}" ng-click="pause()">pause</a> |
        <a href="" class="show-{{isPaused}}" ng-click="resume()">resume</a> |
        <a href="" class="show-{{!isSet}}" ng-click="reset()">reset</a>
    </timer>

</section> 

